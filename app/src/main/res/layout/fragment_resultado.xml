<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:overScrollMode="always">

        <LinearLayout
            android:id="@+id/lista_resultados"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textColor="#ffffffff"
                android:textStyle="bold"
                android:id="@+id/resultado_txt"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:textColor="#ffffffff"
                android:textStyle="bold"
                android:id="@+id/anuncio"
                android:text="@string/anuncio"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/resultado"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:id="@+id/numeros"
                    android:layout_width="match_parent"
                    android:background="@drawable/verde"
                    android:layout_height="70dp"></RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:id="@+id/kino"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="#ffffffff"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="@string/resultadosKino"/>

                    <RelativeLayout
                        android:id="@+id/numerosKino"
                        android:layout_width="match_parent"
                        android:background="@drawable/verde"
                        android:layout_height="70dp"></RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:id="@+id/reKino"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="#ffffffff"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="@string/resultadosReKino"/>

                    <RelativeLayout
                        android:id="@+id/numerosReKino"
                        android:layout_width="match_parent"
                        android:background="@drawable/verde"
                        android:layout_height="70dp"></RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:id="@+id/chanchito"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="#ffffffff"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="@string/resultadosChanchito"/>

                    <RelativeLayout
                        android:id="@+id/numerosChanchito"
                        android:layout_width="match_parent"
                        android:background="@drawable/verde"
                        android:layout_height="70dp"></RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:id="@+id/premios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="#ffffffff"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="@string/premios_txt"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:textColor="#ffffffff"
                            android:textStyle="bold"
                            android:id="@+id/premios_txt"
                            android:textAlignment="textStart"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:textColor="#ffffffff"
                            android:textStyle="bold"
                            android:id="@+id/premios_int"
                            android:textAlignment="textEnd"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/button_comprar"
                android:text="@string/button_comprar"
                android:visibility="gone"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:onClick="comprar"
                android:background="@drawable/rojo"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="70dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>